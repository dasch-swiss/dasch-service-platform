load("@io_bazel_rules_go//go:def.bzl", "go_binary")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "data",
    srcs = glob([
        "**/fake-backend/data/*.json",
    ]),
)

pkg_tar(
    name = "static-app",
    srcs = ["//public"],
    mode = "0755",
    package_dir = "/data",
    strip_prefix = ".",
)

pkg_tar(
    name = "db",
    srcs = [":data"],
    mode = "0755",
    package_dir = "/data/db",
)

# push to dockerhub
container_push(
    name = "push",
    format = "Docker",
    image = ":image",
    registry = "index.docker.io",
    repository = "daschswiss/dsp-metadata-service",
    tag = "{BUILD_SCM_TAG}",
)

go_image(
    name = "image",
    srcs = ["fake-backend.go"],
    data = [
        "//public",
        "//services/metadata/backend/fake-backend/data",
    ],
    importpath = "github.com/dasch-swiss/dasch-service-platform/services/metadata/backend/fake-backend",
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_gorilla_handlers//:handlers",
        "@com_github_gorilla_mux//:mux",
    ],
)

go_binary(
    name = "cmd",
    srcs = ["fake-backend.go"],
    data = ["//services/metadata/backend/fake-backend/data"],
    importpath = "github.com/dasch-swiss/dasch-service-platform/services/metadata/backend/fake-backend",
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_gorilla_handlers//:handlers",
        "@com_github_gorilla_mux//:mux",
    ],
)
