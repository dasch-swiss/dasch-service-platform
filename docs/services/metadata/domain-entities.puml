class Project {
  The Project.
  -- Required Fields --
  .. (1) ..
  +string shortcode
  +string name
  +Text description
  +Date startDate

  .. (1 - n) ..
  +Dataset[] datasets
  +Text[] keywords
  +Text[]|URL discipline
  +Text[]|URL temporalCoverage
  +Place spatialCoverage

  .. (1 - 2) ..
  +URL url

  -- Optional Fields --
  .. (0 - 1) ..
  +DataManagementPlan dataManagementPlan
  +Date endDate

  .. (0 - n) ..
  +string[] publication
  +Grant[] grant
  +Text[] alternateName
}

